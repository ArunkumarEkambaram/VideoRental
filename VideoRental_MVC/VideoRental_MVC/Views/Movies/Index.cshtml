@model VideoRental_MVC.ViewModel.CustomerMovieViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.MovieDetails.Name</h2>

@if (Model.Customers.Count > 0)
{
<ul>
    @foreach (var customer in Model.Customers)
    {
        <li>
            @customer.Name
        </li>
    }
</ul>
}
else
{
    <div>No Customer Renterd this movie</div>
}
